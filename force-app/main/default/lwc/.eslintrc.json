{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "$A": "readonly",
    "$Browser": "readonly",
    "$ContentAsset": "readonly",
    "$Label": "readonly",
    "$Locale": "readonly",
    "$Resource": "readonly"
  },
  "rules": {
    "no-console": "warn",
    "eqeqeq": "error",
    "curly": "error",
    "no-unused-vars": "off",
    "no-undef": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-eval": "error",
    "no-implied-eval": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "node": true
      }
    }
  ]
}